<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">

<head>
  	
  	<meta name="description" content="Demo of a Sliding Login Panel using jQuery 1.3.2" />
  	<meta name="keywords" content="jquery, sliding, toggle, slideUp, slideDown, login, login form, register" />
	<meta http-equiv="content-type" content="text/html; charset=utf-8" />	

	<!-- stylesheets -->
  	<link rel="stylesheet" href="css/style.css" type="text/css" media="screen" />
  	<link rel="stylesheet" href="css/slide.css" type="text/css" media="screen" />
	
  	<!-- PNG FIX for IE6 -->
  	<!-- http://24ways.org/2007/supersleight-transparent-png-in-ie6 -->
	<!--[if lte IE 6]>
		<script type="text/javascript" src="js/pngfix/supersleight-min.js"></script>
	<![endif]-->
	 
    <!-- jQuery - the core -->
	<script src="js/jquery-1.3.2.min.js" type="text/javascript"></script>
	<!-- Sliding effect -->
	<script src="js/slide.js" type="text/javascript"></script>
	
	

</head>

<body>
<!-- Panel -->
<div id="toppanel">
	<div id="panel">
		<div class="content clearfix">
		<%= form_tag("/real/contactmail/", :method=>"post") do %>
			<div class="left">
				<h1>Mail Your Requirements To Us</h1>
				
				
				 <label class="control-label">
			Name
			<span class="required">*</span>
			</label>
			<%= text_field_tag(:name,"") %><br/>
			
			<label class="control-label">
			Email
			<span class="required">*</span>
			</label>
			<%= text_field_tag(:email,"") %><br/>
			
			<label class="control-label">
			Phone
			<span class="required">*</span>
			</label>
			<%= text_field_tag(:phone,"") %><br/>
				
				
			</div>
			<div class="left">
				<!-- Login Form -->
				
			
			 
			<br>
			
			
			
			
			
			
			
			
			<label class="control-label">
			Property Type
			<span class="required">*</span>
			</label>
			<%= text_field_tag(:propertytype,"") %><br/>
			
			<label class="control-label">
			Sub Property Type
			<span class="required">*</span>
			</label>
			<%= text_field_tag(:subpropertytype,"") %><br/>
			
			<label class="control-label">
			Purpose
			<span class="required">*</span>
			</label>
			<%= text_field_tag(:purpose,"") %><br/>
			
			
			<br>
			<br>
			
			
			
			
		
			</div>
			<div class="left right">			
				<label class="control-label">
			Bed Room
			<span class="required">*</span>
			</label>
			<%= text_field_tag(:bedroom,"") %><br/>
			<label class="control-label">
			Price Limit
			<span class="required">*</span>
			</label>
			<%= text_field_tag(:price,"") %><br/>
			<label class="control-label">
			Location
			<span class="required">*</span>
			</label>
			<%= text_field_tag(:location,"") %><br/>
			
			
			<%= submit_tag("send",  :value => "send",:class=>"btn btn-success") %>		
			</div>
			<% end %>
		</div>
</div> <!-- /login -->	

	<!-- The tab on top -->	
	<div class="tab">
		<ul class="login">
			<li class="left">&nbsp;</li>
			<li>Send Your Requirements</li>
			<li class="sep">|</li>
			<li id="toggle">
				<a id="open" class="open" href="#">contact</a>
				<a id="close" style="display: none;" class="close" href="#">Close Panel</a>			
			</li>
			<li class="right">&nbsp;</li>
		</ul> 
	</div> <!-- / top -->
	
</div> <!--panel -->

    
</body>
</html>
