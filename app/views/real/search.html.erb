<html>
<body style="margin-top: 11%;">

<% unless flash[:notice].nil? %>
                       <div class="heading_featured" >
                               <fieldset style="height: 35px; background-color: #FF0040;color: #FFFFFF;padding-top:10px">
                                       <div align="center">
                                               <font size="5"><p class="flash-msg"> <%= flash[:notice] %> </p></font>
                                       </div>
                               </fieldset>
                       </div>
<% end %>
	<div class="row" style="padding-right:20px;padding-left:10px;padding-top:10px;"> 

		<div style="float:left; width:25%; padding-left:2%" >
			
					
					
			<div class="wellside"style="background-color:#A4A4A4;padding-left:20px;padding-right:20px;padding-bottom:10px">
				<fieldset style="height: 350px; background-color: #A4A4A4;color: #000000;padding-top:5px">
				<h4>Filter</h4>
				<hr style="margin:0px;">
				<br>
				<h4>Browse by Category</h4>
				
			
				<br>
					<ul class="nav nav-tabs nav-stacked">
  
						<li>
							<%= link_to "Residential", {:controller => "real", :action => "search", :name => "Residential", :method => :post}%>
						</li>
						<li>
							<%= link_to "Industrial", {:controller => "real", :action => "search", :name => "Industrial", :method => :post}%>
						</li>
						<li>
							<%= link_to "Land", {:controller => "real", :action => "search", :name => "Land", :method => :post}%>
						</li>
						<li>
							<%= link_to "Commercial", {:controller => "real", :action => "search", :name => "Commercial", :method => :post}%>
						</li>

						<li>
							<a href="#">Foreclosures</a>
						</li>
						<li>
							<a href="#"> Muiplex / Income Property</a>
						</li>



					</ul>
					<fieldset>
				
			</div> 
					<br><br>
			
			
			
			<div class="wellside"style="background-color:#A4A4A4;padding-left:20px;padding-right:20px;padding-top:20px;padding-bottom:20px">
				<h4 class="side_heading">Sub Filtration</h4>
				<hr style="margin:0px;">
		
				<div style="padding-top:10px;">
		
					<%= form_tag("/real/search/", :method=>"post") do %>
				
						<div class="controls">
							<label class="checkbox" >
								<%= check_box_tag  "rental_checkbox","rental" %>
									Rental
							</label>
							<label class="checkbox">
								<%= check_box_tag  'sale_checkbox','sale' %>
				   
									For Sale
							</label>
								<hr>
				  
				  
							<label class="checkbox">
								<%= check_box_tag  'condo_checkbox','condo' %>
									Condo
							</label>
							<label class="checkbox">
								<%= check_box_tag  'appartment_checkbox','appartment' %>
									Apartment
							</label> 
							<label class="checkbox">
								<%= check_box_tag  'duplex_checkbox','duplex' %>
									Duplex
							</label>
							<label class="checkbox">
								<%= check_box_tag  'triplex_checkbox','triplex' %>
									Triplex
							</label>

							<div style="padding:20px;">
			
								<label>Bedrooms</label>
									<input class="span1" type="text" placeholder="from"> to <input class="span1" type="text" placeholder="to">
							</div>


						</div>
								<p>&nbsp;&nbsp;&nbsp;
		
							
				
							
						
								<%= submit_tag("submit",  :value => "find",:class=>"btn  btn-large btn-success") %>
						
								<%=link_to "Reset", :controller => "real", :action => "search", :name => "s", :id => @profile%>
						
								</p>
					<%end%>
			
				</div>
			</div>
			<div style="padding-top:10px;">
				<div class="wellside"style="background-color:#A4A4A4;padding-left:20px;padding-right:20px;padding-top:20px;padding-bottom:20px">
					<h4 class="side_heading">Refine Search</h4>
					<hr style="margin:0px;">
					<div style="padding-top:10px;">
						<form class="form-search">
							<input type="text" class="span3">
							<button type="submit" class="btn btn-success">Search</button>
							
						</form>
					</div>
					
				</div>
			</div>
		</div>

		<div>
	   
			<div id="container"style="float:right; width:70%;background-color:#A4A4A4">
				<div class="wellside" style ="padding-left:3%;padding-right:3%;padding-top:1% ">
					<div class="alert" style ="background-color:#6E6E6E">
						<div class="page-schres">
							<h4 style="color:white" >
							
   
								<large style="color:00FFCC"> <%=@s%></large> Search Results for <%=@pt%>

							</h4>
						</div>
					</div>
				</div>	
				
				<ul class="thumbnails" style="padding-left:3%">
				
				
				<%@t.each do |i|%>
  
              
					<li class="span2" >
						<div id="image1" class="thumbnail"  style="background-color:#FFFFFF;">
							
							<%= link_to  "" %>
							<%= link_to image_tag(i[7], :width => 225, :height => 175), :controller => "real",:action => 'listing', :id => @profile,:name => "Residential", :method => :post,:img=>i[7],:price=>i[2],:bed=>i[6],:nam=>i[1],:purpose=>i[5],:type=>i[4],:contant=>i[9],:p_id=>i[0]%>
								<div class="caption">
									<h4><%=link_to i[1], :controller => "real", :action => "listing", :id => @profile,:name => "Residential", :method => :post,:img=>i[7],:price=>i[2],:bed=>i[6],:nam=>i[1],:purpose=>i[5],:type=>i[4],:contant=>i[9],:p_id=>i[0]%></h4>
									<p><%=truncate(i[9], :length => 25, :separator => ' ')%></p>
									<br>
									
									
								</div>
						</div>
					</li>
				<%end%>
				
		</ul>
		</fieldset>
		
	
			</div>
		</div>
	   
	</div>


</body>
</html>